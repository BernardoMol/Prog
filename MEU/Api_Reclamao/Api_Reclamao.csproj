<Project Sdk="Microsoft.NET.Sdk.Web">

  <PropertyGroup>
    <TargetFramework>net9.0</TargetFramework>
    <Nullable>enable</Nullable>
    <ImplicitUsings>enable</ImplicitUsings>
  </PropertyGroup>

  <ItemGroup>
    <PackageReference Include="Microsoft.AspNetCore.OpenApi" Version="9.0.4" />
    <PackageReference Include="MySql.Data" Version="9.3.0" />
    <ProjectReference Include="..\Reclamao\Reclamao.csproj" />
  </ItemGroup>
 <!-- este trecho para excluir arquivos duplicados do output do publish: -->
 <!-- O projeto Api_Reclamao referencia Reclamao no .csproj com <ProjectReference>.
      No Api_Reclamao.csproj vocÃª impede que os appsettings.json da pasta Reclamao sejam copiados para o publish, evitando conflito.
      Dockerfile copia tudo, restaura e publica sÃ³ o projeto da API, que inclui o projeto Reclamao compilado junto. -->
  <ItemGroup>
    <None Update="..\Reclamao\appsettings.json">
      <CopyToPublishDirectory>Never</CopyToPublishDirectory>
    </None>
    <None Update="..\Reclamao\appsettings.Development.json">
      <CopyToPublishDirectory>Never</CopyToPublishDirectory>
    </None>
  </ItemGroup>

</Project>
